<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:descendantFocusability="blocksDescendants"
        xmlns:android="http://schemas.android.com/apk/res/android"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp">

            <TextView
                android:id="@+id/entry_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/entry_start"
                android:fontFamily="sans-serif-condensed"
                android:typeface="sans"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:ellipsize="end"
                android:lines="1" />

            <TextView
                android:id="@+id/entry_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:layout_alignBottom="@+id/entry_title"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="normal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:lines="1" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/entry_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/entry_dur"
                android:layout_alignParentStart="true"
                android:fontFamily="sans-serif"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:typeface="sans"
                android:ellipsize="end"
                android:lines="1" />

            <TextView
                android:id="@+id/entry_dur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/entry_h"
                android:layout_marginStart="16dp"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="normal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:lines="1" />

            <TextView
                android:id="@+id/entry_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="4dp"
                android:text="@string/entry_hours"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="normal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:lines="1" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>